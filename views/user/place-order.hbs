<div class="container mt-5">
  <form action="/place-order" method="post" id="checkout-form">
    <div class="row">

      <div class="col-md-6 col-sm-12">
        <h2>Enter Delivery Details</h2>
        <div>
          <div class="form-group">
            <label for="deliveryName">Name</label>
            <input
              class="form-control"
              type="text"
              id="deliveryName"
              name="deliveryName"
            />
          </div>
          <div class="form-group">
            <label for="address">Address</label>
            <input
              class="form-control"
              type="text"
              id="address"
              name="address"
            />
          </div>
          <div class="form-group">
            <label for="pincode">Pincode</label>
            <input
              class="form-control"
              type="text"
              id="pincode"
              name="pincode"
            />
          </div>
          <div class="form-group">
            <label for="mobile">Mobile</label>
            <input class="form-control" type="text" id="mobile" name="mobile" />
          </div>
          <input type="hidden" id="userId" name="userId" value="{{user._id}}" />
        </div>
      </div>

      <div class="col-md-6 col-sm-12">
        <div class="card mt-5 ms-5 p-3 checkout">
          <h5>Total Amount: &dollar;{{total}}</h5>
          <hr />
          <div class="payment">
            <p>Payment method</p>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="paymentMethod"
                id="cash-on-delivery"
                value="COD"
                checked
              />
              <label class="form-check-label" for="cash-on-delivery">Cash On
                Delivery</label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="paymentMethod"
                id="online-payment"
                value="online"
              />
              <label class="form-check-label" for="online-payment">Online
                Payment</label>
            </div>
            <button
              type="submit"
              class="btn btn-primary text-end"
            >Checkout</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

